
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br/>
<br/>
<h1>Selected Stocks</h1>
    <table class="table table-inverse">
    <tr>
        <th>
            Stock
        </th>
        <th>
            Price
        </th>
        <th>
            Ticker
        </th>
        @*<th>
            Risk
        </th>*@
        <th>
            PEratio
        </th>
        <th>
            Quantity
        </th>
    </tr>

    @foreach (var Element in ViewBag.Cart)
    {
        <tr>
            <td>
                @Element.name
            </td>
            <td>
                @Element.price
            </td>
            <td>
                @Element.ticker
            </td>
            <td>
                @Element.risk
            </td>
            <td>
                @Element.PEratio
            </td>
            <td>
                @Element.quantity
            </td>
            
        </tr>
    
    }
</table>
<h2>Checkout</h2>
<h3>Total: @ViewBag.gtotal</h3>

<p><a class="btn btn-primary btn-lg" href="/Home/Checkout">Proccess Trade &raquo;</a></p>

<h2>Invest Further</h2>
@*Display options of products for user*@

<table class="table table-inverse">
    <tr>
        <th>
            Stock
        </th>
        <th>
            Price
        </th>
        <th>
            Ticker
        </th>
        @*<th>
            Risk
        </th>*@
        <th>
            PEratio
        </th>
        <th>
            Quantity
        </th>
        <th>
            Purchase
        </th>
    </tr>

    @foreach (var Element in ViewBag.Products)
    {
        <tr>
            <form action="/Home/Cart" method="post">
                <input type="hidden" name="AddProduct" value="@Element.name" />
                <td>
                    @Element.name
                </td>
                <td>
                    @Element.price
                </td>
                <td>
                    @Element.ticker
                </td>
                @*<td>
                    @Element.risk
                </td>*@
                <td>
                    @Element.PEratio
                </td>
                <td>
                    <label for="quantity"></label><input id="quantity" type="number" value="0" name="Quantity" />
                </td>

                <td>
                    <input type="submit" value="Add to Cart" />
                </td>
            </form>

        </tr>
    }
</table>

